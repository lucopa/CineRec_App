<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_gravity="center">

    <TextView
        android:text="@string/EliminarPeliImportanteTxt"
        android:textSize="20sp"
        android:gravity="center"
        android:fontFamily="@font/quicksand"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:lottie_imageAssetsFolder="assets"
        app:lottie_fileName="eliminar_peli_importante.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        />



        <Button
            android:id="@+id/EliminarPeliImportante"
            app:icon="@drawable/baseline_delete_forever_24"
            android:text="@string/EliminarPeliImportante"
            android:fontFamily="@font/quicksand"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/amarillo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/CancelarPeliImportante"
            app:icon="@drawable/baseline_close_24"
            android:text="@string/CancelarPeliImportante"
            android:fontFamily="@font/quicksand"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/amarillo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />


</androidx.appcompat.widget.LinearLayoutCompat>