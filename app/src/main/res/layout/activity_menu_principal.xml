<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPrincipal">

    <FrameLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/palomitasfondo">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/palomitasfondo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="0dp">

            <include layout="@layout/custom_toolbar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:padding="10dp">

                <TextView
                    android:text="@string/BienvenidoPrincipal"
                    android:textStyle="bold"
                    android:fontFamily="@font/quicksand"
                    android:textSize="20sp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/UidPrincipal"
                    android:textStyle="bold"
                    android:fontFamily="@font/quicksand"
                    android:text="@string/UidPrincipal"
                    android:visibility="gone"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/NombresPrincipal"
                    android:textStyle="bold"
                    android:fontFamily="@font/quicksand"
                    android:text="@string/NombresPrincipal"
                    android:visibility="gone"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/CorreoPrincipal"
                    android:text="@string/CorreoPrincipal"
                    android:textStyle="bold"
                    android:fontFamily="@font/quicksand"
                    android:textSize="20sp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!-- Opciones 1 y 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:alpha="0.9"

                    android:layout_margin="10dp"
                    android:weightSum="2">

                    <!-- OPCIÓN 1 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/iconos_background"
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="78dp"
                            android:layout_marginTop="20dp"
                            android:layout_height="78dp"
                            android:src="@drawable/agregar" />

                        <Button
                            android:id="@+id/AgregarPeli"
                            android:text="@string/AgregarPeli"
                            android:enabled="false"
                            android:fontFamily="@font/quicksand"
                            android:backgroundTint="@color/amarillo"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <!-- OPCIÓN 2 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:background="@drawable/iconos_background"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="78dp"
                            android:layout_marginTop="20dp"
                            android:layout_height="78dp"
                            android:src="@drawable/lista" />

                        <Button
                            android:id="@+id/ListarPeli"
                            android:backgroundTint="@color/amarillo"
                            android:fontFamily="@font/quicksand"
                            android:textColor="@color/black"
                            android:text="@string/ListarPeli"
                            android:enabled="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Opciones 3 y 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:alpha="0.9"
                    android:weightSum="2">

                    <!-- OPCIÓN 3 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/iconos_background"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="78dp"
                            android:layout_height="78dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/archivados" />

                        <Button
                            android:id="@+id/Archivados"
                            android:textColor="@color/black"
                            android:layout_marginBottom="10dp"
                            android:backgroundTint="@color/amarillo"
                            android:textStyle="bold"
                            android:fontFamily="@font/quicksand"
                            android:text="@string/Archivados"
                            android:enabled="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp" />
                    </LinearLayout>

                    <!-- OPCIÓN 4 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/iconos_background"
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_marginTop="20dp"
                            android:layout_width="78dp"
                            android:layout_height="78dp"
                            android:src="@drawable/perfil" />

                        <Button
                            android:id="@+id/Perfil"
                            android:backgroundTint="@color/amarillo"
                            android:enabled="false"
                            android:textColor="@color/black"
                            android:text="@string/Perfil"
                            android:fontFamily="@font/quicksand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Opciones 5 y 6 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:alpha="0.9"
                    android:layout_margin="10dp"
                    android:weightSum="2">

                    <!-- OPCIÓN 5 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/iconos_background"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="78dp"
                            android:layout_height="78dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/salir" />

                        <Button
                            android:id="@+id/cerrar"
                            android:backgroundTint="@color/amarillo"
                            android:textColor="@color/black"
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold"
                            android:enabled="false"
                            android:fontFamily="@font/quicksand"
                            android:text="@string/CerrarSesin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp" />
                    </LinearLayout>

                    <!-- OPCIÓN 6 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/iconos_background"
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_marginTop="20dp"
                            android:layout_width="78dp"
                            android:layout_height="78dp"
                            android:src="@drawable/acerca_de" />

                        <Button
                            android:id="@+id/acercaDe"
                            android:backgroundTint="@color/amarillo"
                            android:textColor="@color/black"
                            android:text="@string/AcercaDe"
                            android:fontFamily="@font/quicksand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:enabled="false"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_nav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:background="@color/white"
                app:itemIconSize="30dp"
                app:labelVisibilityMode="unlabeled"
                app:menu="@menu/bottom_menu" />

        </LinearLayout>
    </FrameLayout>
</ScrollView>
