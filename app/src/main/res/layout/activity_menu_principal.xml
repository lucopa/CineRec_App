<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPrincipal">

    <FrameLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fondopalomitas">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/palomitasfondo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="0dp">

            <include layout="@layout/custom_toolbar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:background="@drawable/iconos_background"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="50dp"
                android:alpha="0.9"
                android:padding="10dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/cineperfil" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:text="@string/BienvenidoPrincipal"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksand"
                        android:textSize="20sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="250dp"
                        android:layout_marginTop="20dp"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/UidPrincipal"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksand"
                        android:text="@string/UidPrincipal"
                        android:visibility="gone"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/Linear_Nombre"
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/baseline_person_24_2"/>

                    <TextView
                        android:id="@+id/NombresPrincipal"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksand"
                        android:text="@string/NombresPrincipal"
                        android:layout_marginLeft="10dp"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </androidx.appcompat.widget.LinearLayoutCompat>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/Linear_Correo"
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/baseline_email_24_2"/>

                    <TextView
                        android:id="@+id/CorreoPrincipal"
                        android:text="@string/CorreoPrincipal"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksand"
                        android:layout_marginLeft="10dp"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </androidx.appcompat.widget.LinearLayoutCompat>


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/Linear_Verificado"
                        android:visibility="gone"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/baseline_verified_user_24"/>

                        <TextView
                            android:id="@+id/EstadoCuentaPrincipal"
                            android:text="@string/EstadoCuentaPrincipal"
                            android:textStyle="bold"
                            android:fontFamily="@font/quicksand"
                            android:layout_marginLeft="10dp"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />



                    </androidx.appcompat.widget.LinearLayoutCompat>



                </androidx.appcompat.widget.LinearLayoutCompat>


            </LinearLayout>

            <!-- Opciones 1 y 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:alpha="0.9"
                    android:layout_margin="10dp">

                    <!-- OPCIÓN 1 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/iconos_background"
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="78dp"
                            android:layout_marginTop="20dp"
                            android:layout_height="78dp"
                            android:src="@drawable/agregar" />

                        <Button
                            android:id="@+id/AgregarPeli"
                            android:text="@string/AgregarPeli"
                            android:enabled="false"
                            android:fontFamily="@font/quicksand"
                            android:backgroundTint="@color/amarillo"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <!-- OPCIÓN 2 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:background="@drawable/iconos_background"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="78dp"
                            android:layout_marginTop="20dp"
                            android:layout_height="78dp"
                            android:src="@drawable/lista" />

                        <Button
                            android:id="@+id/ListarPeli"
                            android:backgroundTint="@color/amarillo"
                            android:fontFamily="@font/quicksand"
                            android:textColor="@color/black"
                            android:text="@string/ListarPeli"
                            android:enabled="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Opciones 3 y 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:alpha="0.9">

                    <!-- OPCIÓN 3 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/iconos_background"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="78dp"
                            android:layout_height="78dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/archivados" />

                        <Button
                            android:id="@+id/Archivados"
                            android:textColor="@color/black"
                            android:layout_marginBottom="10dp"
                            android:backgroundTint="@color/amarillo"
                            android:textStyle="bold"
                            android:fontFamily="@font/quicksand"
                            android:text="@string/Archivados"
                            android:enabled="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp" />
                    </LinearLayout>

                    <!-- OPCIÓN 4 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/iconos_background"
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_marginTop="20dp"
                            android:layout_width="78dp"
                            android:layout_height="78dp"
                            android:src="@drawable/perfil" />

                        <Button
                            android:id="@+id/Perfil"
                            android:backgroundTint="@color/amarillo"
                            android:enabled="false"
                            android:textColor="@color/black"
                            android:text="@string/Perfil"
                            android:fontFamily="@font/quicksand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Opciones 5 y 6 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:alpha="0.9"
                    android:layout_margin="10dp">

                    <!-- OPCIÓN 5 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/iconos_background"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="78dp"
                            android:layout_height="78dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/apagado" />

                        <Button
                            android:id="@+id/cerrar"
                            android:backgroundTint="@color/amarillo"
                            android:textColor="@color/black"
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold"
                            android:enabled="false"
                            android:fontFamily="@font/quicksand"
                            android:text="@string/CerrarSesin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp" />
                    </LinearLayout>

                    <!-- OPCIÓN 6 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/iconos_background"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_marginTop="20dp"
                            android:layout_width="78dp"
                            android:layout_height="78dp"
                            android:src="@drawable/informacion2" />

                        <Button
                            android:id="@+id/acercaDe"
                            android:backgroundTint="@color/amarillo"
                            android:textColor="@color/black"
                            android:text="@string/AcercaDe"
                            android:fontFamily="@font/quicksand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:enabled="false"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</ScrollView>
