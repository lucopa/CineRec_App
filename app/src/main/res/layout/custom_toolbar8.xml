<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#e8e8e8"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical|start">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:contentDescription="Flecha para ir atrás"
                android:src="@drawable/haciatras" />

            <ImageView
                android:id="@+id/tv_title_toolbar"
                android:layout_marginTop="8dp"
                android:layout_height="360dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Logo"
                android:src="@drawable/logonuevosinfondo"
                android:layout_width="20dp"/>

            <ImageView
                android:id="@+id/añadir"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:src="@drawable/anadir"
                android:padding="8dp"/>

            <ImageView
                android:id="@+id/borrar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/borrartodo"
                android:padding="8dp"/>

            <!-- Botón de búsqueda que activará el SearchView -->
            <ImageView
                android:id="@+id/buscar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/lupa"
                android:padding="8dp"/>

            <!-- SearchView inicialmente oculto -->
            <androidx.appcompat.widget.SearchView
                android:id="@+id/search_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:queryHint="Buscar contacto"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
</com.google.android.material.appbar.AppBarLayout>
