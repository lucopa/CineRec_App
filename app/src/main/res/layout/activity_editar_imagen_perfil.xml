<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.perfil.Editar_imagen_perfil">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ImagenPerfilActualizar"
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/perfilmenu"
            android:background="@drawable/background_rounded_imagen_perfil"
            android:layout_height="350dp"/>


        <Button
            android:id="@+id/BtnElegirImagen"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/amarillo"
            android:text="@string/BtnElegirImagen"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"
            app:icon="@drawable/baseline_image_24"/>

        <Button
            app:icon="@drawable/baseline_update_24"
            android:id="@+id/BtnActualizarImagen"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/amarillo"
            android:text="@string/BtnActualizarImagen"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>