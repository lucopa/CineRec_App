<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/amarillo"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:contentDescription="Flecha para ir atrás"
                android:src="@drawable/baseline_arrow_back_24_2" />

            <ImageView
                android:id="@+id/tv_title_toolbar"
                android:layout_marginTop="8dp"
                android:layout_height="360dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Logo"
                android:src="@drawable/logonuevosinfondo"
                android:layout_width="20dp"/>

            <ImageView
                android:id="@+id/añadirContacto"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/outline_add_circle_24"
                android:padding="8dp"/>



        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
</com.google.android.material.appbar.AppBarLayout>
