<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detalle.Detalle_Peli"
    android:background="#FFE0B2">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/custom_toolbar3" />

        <!--1.ICONO Y TXT (ID NOTA)-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_note_24"
                android:layout_gravity="center"/>

            <TextView
                android:text="@string/Id_peli_detalle_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/quicksand"
                android:textSize="20sp"
                android:layout_marginStart="10dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!--1.DATO (ID NOTA)-->
        <TextView
            android:id="@+id/Id_Peli_Detalle"
            android:text="@string/Id_peli_detalle"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"
            android:textStyle="bold"
            android:textSize="17sp"/>

        <!--2.ICONO Y TXT(Uid_usuario)-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="30dp"
                android:src="@drawable/baseline_person_24"
                android:layout_height="30dp"
                android:layout_gravity="center"/>

            <TextView
                android:text="@string/Uid_usuario_detalle_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/quicksand"
                android:textSize="20sp"
                android:layout_marginStart="10dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!--2.DATO(Uid_usuario)-->
        <TextView
            android:layout_marginTop="10dp"
            android:text="@string/Uid_usuario_detalle"
            android:id="@+id/Uid_usuario_detalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="17sp"/>

        <!--3.ICONO Y TXT(correo)-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_email_24"
                android:layout_gravity="center"/>

            <TextView
                android:text="@string/Correo_usuario_detalle_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/quicksand"
                android:textSize="20sp"
                android:layout_marginStart="10dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!--3.DATO(correo)-->
        <TextView
            android:id="@+id/Correo_usuario_detalle"
            android:layout_marginTop="10dp"
            android:text="@string/Correo_usuario_detalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="17sp"/>

        <!--4.ICONO Y TXT(titulo)-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_title_24"
                android:layout_gravity="center"/>

            <TextView
                android:text="@string/Titulo_Detalle_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/quicksand"
                android:textSize="20sp"
                android:layout_marginStart="10dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!--4.DATO(titulo)-->
        <TextView
            android:id="@+id/Titulo_Detalle"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/Titulo_Detalle"
            android:fontFamily="@font/quicksand"
            android:textStyle="bold"
            android:textSize="17sp"/>

        <!--5.ICONO Y TXT(descripcion)-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_description_24"
                android:layout_gravity="center"/>

            <TextView
                android:text="@string/Descripcion_Detalle_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/quicksand"
                android:textSize="20sp"
                android:layout_marginStart="10dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!--5.DATO(descripcion)-->
        <TextView
            android:id="@+id/Descripcion_Detalle"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/quicksand"
            android:layout_gravity="center"
            android:text="@string/Descripcion_Detalle"
            android:textStyle="bold"
            android:textSize="17sp"/>

        <!--6.ICONO Y TXT(Fecha_registro_Detalle)-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_access_time_filled_24"
                android:layout_gravity="center"/>

            <TextView
                android:text="@string/Fecha_registro_Detalle_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/quicksand"
                android:textSize="20sp"
                android:layout_marginStart="10dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!--6.DATO(Fecha_registro)-->
        <TextView
            android:id="@+id/Fecha_registro_Detalle"
            android:text="@string/Fecha_registro_Detalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/quicksand"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="17sp"/>

        <!--7.ICONO Y TXT(fecha_peli)-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_calendar_today_24"/>

            <TextView
                android:text="@string/Fecha_peli_Detalle_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/quicksand"
                android:textSize="20sp"
                android:layout_marginStart="10dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!--7.DATO(fecha_peli)-->
        <TextView
            android:id="@+id/Fecha_peli_Detalle"
            android:layout_gravity="center"
            android:text="@string/Fecha_peli_Detalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="17sp"/>

        <!--8.ICONO Y TXT(estado)-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_brightness_1_24"/>

            <TextView
                android:text="@string/Estado_Detalle_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/quicksand"
                android:textSize="20sp"
                android:layout_marginStart="10dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!--8.DATO(estado)-->
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/estado"
            android:layout_gravity="center"
            android:text="@string/Estado_Detalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"
            android:textStyle="bold"
            android:textSize="17sp"/>


        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="35dp"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:src="@drawable/detallesimagen"/>


    </androidx.appcompat.widget.LinearLayoutCompat>



</ScrollView>