<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e8e8"
    tools:context=".Fragments.InfoFragment">

    <!-- Imagen de encabezado -->
    <ImageView
        android:id="@+id/header_image"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/informacionmano"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Título de la aplicación -->
    <TextView
        android:id="@+id/app_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Información de la App"
        android:fontFamily="@font/quicksand"
        android:textColor="#333333"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/header_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Descripción de la aplicación -->
    <TextView
        android:id="@+id/app_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:text="Esta aplicación ofrece una experiencia única para gestionar tus películas favoritas. Diseñada pensando en ti."
        android:textColor="#666666"
        android:textSize="16sp"
        android:fontFamily="@font/quicksand"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toBottomOf="@id/app_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Título de Opiniones -->

    <!-- Contenedor de las opiniones -->

    <!-- Créditos del desarrollador -->
    <TextView
        android:id="@+id/reviews_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="244dp"
        android:fontFamily="@font/quicksand"
        android:gravity="center"
        android:text="Opiniones de nuestros usuarios:"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_description" />

    <LinearLayout
        android:id="@+id/reviews_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reviews_title">

        <TextView
            android:id="@+id/review_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/quicksand"
            android:lineSpacingExtra="4dp"
            android:text="“¡Esta app es increíble! Me encanta lo fácil que es organizar mis películas favoritas.” - Usuario 1"
            android:textColor="#666666"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/review_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/quicksand"
            android:lineSpacingExtra="4dp"
            android:text="“La funcionalidad de recomendaciones es genial, siempre encuentro algo nuevo para ver.” - Usuario 2"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/review_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"
            android:lineSpacingExtra="4dp"
            android:text="“Interfaz intuitiva y moderna, se nota que está bien diseñada.” - Usuario 3"
            android:textColor="#666666"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/developer_credits"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:fontFamily="@font/quicksand"
        android:gravity="center"
        android:text="Desarrollado por: Luis Cobler Parrra"
        android:textColor="#333333"
        android:layout_marginTop="40dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_description"
        tools:layout_editor_absoluteY="299dp"
        tools:ignore="MissingConstraints" />

    <!-- Botón de contacto -->
    <Button
        android:id="@+id/contact_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="#607D8B"
        android:fontFamily="@font/quicksand"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:drawableLeft="@drawable/baseline_phone_24_3"
        android:text="Contactar"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/developer_credits" />

    <!-- Iconos de redes sociales debajo de las opiniones -->

    <!-- Pie de página -->


    <TextView
        android:id="@+id/footer_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="CineRec App © 2024"
        android:textColor="#999999"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
