<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/fondo10"
    tools:context=".MainActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="170dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registro"
                android:id="@+id/loginText"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/greyblue"/>

            <EditText
                android:id="@+id/nombre"
                android:hint="@string/Nombre"
                android:textColorHint="@color/greyblue"
                android:inputType="textPersonName|textCapWords"
                android:padding="12dp"
                android:drawablePadding="18dp"
                android:drawableStart="@drawable/baseline_person_24"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_text"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/correo"
                android:hint="@string/Correo"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/greyblue"
                android:padding="12dp"
                android:drawablePadding="18dp"
                android:drawableStart="@drawable/baseline_email_24"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_text"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:passwordToggleEnabled="true"
                app:hintEnabled="false">


                <EditText
                    android:id="@+id/contrase単a"
                    android:hint="@string/Contrase単a"
                    app:passwordToggleEnabled="true"
                    app:hintEnabled="false"
                    android:inputType="textPassword"
                    android:textColorHint="@color/greyblue"
                    android:padding="12dp"
                    android:drawablePadding="18dp"
                    android:drawableStart="@drawable/baseline_lock_24"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_text"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/cardview_dark_background" />



            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:passwordToggleEnabled="true"
                app:hintEnabled="false">


                <EditText
                    android:id="@+id/confirmarContrase単a"
                    android:hint="@string/ConfirmarContrase単a"
                    app:passwordToggleEnabled="true"
                    app:hintEnabled="false"
                    android:inputType="textPassword"
                    android:textColorHint="@color/greyblue"
                    android:padding="12dp"
                    android:drawablePadding="18dp"
                    android:drawableStart="@drawable/baseline_lock_24"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_text"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/cardview_dark_background"
                    android:layout_marginTop="20dp"/>



            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/registroBoton"
                android:text="Registro"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/greyblue"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:id="@+id/tengoUnaCuenta"
        android:text="@string/Tengounacuenta"
        android:textColor="@color/greyblue"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

</LinearLayout>