<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Capa de fondo -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#B2FFEB"/> <!-- Verde muy claro -->
            <corners android:radius="8dp"/> <!-- Esquinas redondeadas -->
        </shape>
    </item>

    <!-- Capa de borde -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Fondo transparente para ver el color interior -->
            <stroke
                android:width="2dp"
            android:color="#005601"/> <!-- Color verde del borde -->
            <corners android:radius="8dp"/> <!-- Esquinas redondeadas -->
        </shape>
    </item>
</layer-list>
